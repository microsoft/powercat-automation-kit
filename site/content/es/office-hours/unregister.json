{
  "checkErrorsMode": "onValueChanging",
  "completedHtml": {
    "default": "Thank you for completing unregistration",
    "es": "Gracias por completar la cancelación del registro"
  },
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{register-email.length} > 0",
      "setToName": "code",
      "setValue": "Office-Hours-Unregister"
    }
  ],
  "pages": [
    {
      "elements": [
        {
          "type": "checkbox",
          "name": "reason",
          "title": {
            "default": "(Optional) Your feedback helps us improve. Which of the following are reason(s) that you are unregistering?",
            "es": "(Opcional) Sus comentarios nos ayudan a mejorar. ¿Cuáles de las siguientes son las razones por las que está cancelando el registro?"
          },
          "isRequired": false,
          "hasOther": true,
          "colCount": 1,
          "choices": [
            {
              "value": "Not sure",
              "text": {
                "default": "Not sure",
                "es": "No estoy seguro"
              }
            },
            {
              "value": "The time does not work",
              "text": {
                "default": "The time does not work",
                "es": "El tiempo no funciona"
              }
            },
            {
              "value": "No longer relevant",
              "text": {
                "default": "No longer relevant",
                "es": "Ya no es relevante"
              }
            },
            {
              "value": "Too technical",
              "text": {
                "default": "Too technical",
                "es": "Demasiado técnico"
              }
            },
            {
              "value": "Not enough business focus",
              "text": {
                "default": "Not enough business focus",
                "es": "No hay suficiente enfoque de negocio"
              }
            }
          ]
        },
        {
          "type": "text",
          "name": "register-name",
          "title": {
            "default": "The name that you registered with",
            "es": "El nombre con el que se registró"
          }
        },
        {
          "type": "text",
          "inputMask": "email",
          "name": "register-email",
          "title": {
            "default": "The email address your registered with",
            "es": "La dirección de correo electrónico con la que se registró"
          },
          "isRequired": true,
          "validators": [
            {
              "type": "email"
            }
          ]
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your unregistration now?",
            "es": "¿Enviar su cancelación de registro ahora?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "es": "Estado: "
          }
        }
      ]
    }
  ]
}