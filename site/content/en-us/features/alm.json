{
    "triggers": [
        {
            "type": "setvalue",
            "expression": "{send-results} = true",
            "setToName": "code",
            "setValue": "Feedback-AK4PP-ALM"
        }
    ],
    "pages": [
        {
            "name": "welcome",
            "elements": [
                {
                    "type": "checkbox",
                    "name": "roles",
                    "title": "Which of was most useful for related to ALM for your automation solutions?",
                    "isRequired": true,
                    "colCount": 1,
                    "hasOther": true,
                    "choices": [
                        "How this relates to in-product ALM roadmap with Managed Environments",
                        "What is the ALM ALM Accelerator for Power Platform",
                        "What the ALM roadmap is for the Automation Kit",
                        "How we add ALM specific tasks to our Power Automate Desktop process",
                        "How to apply unit testing",
                        "How to apply integration / system testing"
                    ]
                },
                {
                    "type": "boolean",
                    "name": "send-results",
                    "label": "Do you want to send the feedback on ALM?",
                    "isRequired": true
                },
                {
                    "type": "html",
                    "visibleIf": "{send-results} = true",
                    "html": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our guidance and roadmap"
                },
                {
                    "type": "comment",
                    "name": "other-feedback",
                    "title": "Did you have any other feedback?",
                    "visibleIf": "{send-results} = true"
                },
                {
                    "type": "feedback-task",
                    "name": "send-results",
                    "title": "Send your feedback now?",
                    "destination": "https://aka.ms/ak4pp-feedback2",
                    "visibleIf": "{send-results} = true"
                },
                {
                    "type": "html",
                    "visibleIf": "{send-results-status.length} > 0",
                    "html": "Status: {send-results-status}"
                }
            ]
        }
    ]
}