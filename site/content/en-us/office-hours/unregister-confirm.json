{
    "checkErrorsMode": "onValueChanging",
    "completedHtml": "Thank you for confirming unregistration",
    "triggers": [
        {
            "type": "setvalue",
            "expression": "{confirmation-code.length} > 0",
            "setToName": "code",
            "setValue": "Office-Hours-Unregister-ConfirmationCode"
        }
    ],
    "pages": [
        {
            "elements": [
                {
                    "type": "text",
                    "name": "confirmation-code",
                    "isRequired": true,
                    "title": "Please enter your confirmation code"
                },              
                {
                    "type": "feedback-task",
                    "name": "send-results",
                    "title": "Confirm your unregistration now?",
                    "destination": "https://aka.ms/ak4pp-feedback2"
                },
                {
                    "type": "html",
                    "visibleIf": "{send-results-status.length} > 0",
                    "html": "Status: {send-results-status}"
                }
            ]
        }
    ]
}