{
  "checkErrorsMode": "onValueChanging",
  "completedHtml": {
    "default": "Thank you for confirming unregistration",
    "th": "ขอขอบคุณที่ยืนยันการยกเลิกการลงทะเบียน"
  },
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{confirmation-code.length} > 0",
      "setToName": "code",
      "setValue": "Office-Hours-Unregister-ConfirmationCode"
    }
  ],
  "pages": [
    {
      "elements": [
        {
          "type": "text",
          "name": "confirmation-code",
          "isRequired": true,
          "title": {
            "default": "Please enter your confirmation code",
            "th": "กรุณากรอกรหัสยืนยันของคุณ"
          }
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Confirm your unregistration now?",
            "th": "ยืนยันการยกเลิกการลงทะเบียนของคุณตอนนี้หรือไม่"
          },
          "destination": "https://aka.ms/ak4pp-feedback2"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "th": "สถานะ: {ส่ง-ผลลัพธ์-สถานะ}"
          }
        }
      ]
    }
  ]
}