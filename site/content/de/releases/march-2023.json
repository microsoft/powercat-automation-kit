{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-March-2023-Release"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "roles",
          "title": {
            "default": "Which of the following will be of most useful for you in this release?",
            "de": "Welche der folgenden Optionen wird für Sie in dieser Version am nützlichsten sein?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "New Scheduler features",
              "text": {
                "default": "New Scheduler features",
                "de": "Neue Scheduler-Funktionen"
              }
            },
            {
              "value": "v2 schema support",
              "text": {
                "default": "v2 schema support",
                "de": "V2-Schemaunterstützung"
              }
            },
            {
              "value": "Resolution of bugs and questions",
              "text": {
                "default": "Resolution of bugs and questions",
                "de": "Behebung von Fehlern und Fragen"
              }
            },
            {
              "value": "Roadmap of whats next",
              "text": {
                "default": "Roadmap of whats next",
                "de": "Roadmap der nächsten Schritte"
              }
            }
          ]
        },
        {
          "type": "comment",
          "name": "anything-else",
          "title": {
            "default": "Any other key features you think should be added?",
            "de": "Gibt es noch weitere wichtige Funktionen, die Ihrer Meinung nach hinzugefügt werden sollten?"
          }
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on the release?",
            "de": "Möchten Sie das Feedback zur Veröffentlichung senden?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance",
            "de": "Wir freuen uns auf Ihr Feedback. Als Kernteam von Automation Kit nutzen wir das Feedback, um unsere Meilensteine und Leitlinien zu verbessern."
          }
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "de": "Hatten Sie weiteres Feedback?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "de": "Jetzt Ihr Feedback senden?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "de": "Status: "
          }
        }
      ]
    }
  ]
}