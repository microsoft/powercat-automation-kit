{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-November-2022-Release"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "roles",
          "title": {
            "default": "Which of was most useful for you in this release?",
            "en-gb": "Which of was most useful for you in this release?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "Getting hands on with the Automation Kit",
              "text": {
                "default": null,
                "en-gb": null
              }
            },
            {
              "value": "Data packs so that I can show the Automation Kit",
              "text": {
                "default": null,
                "en-gb": null
              }
            },
            {
              "value": "New automated ALM GitHub release process",
              "text": {
                "default": null,
                "en-gb": null
              }
            },
            {
              "value": "Roadmap of whats next",
              "text": {
                "default": null,
                "en-gb": null
              }
            }
          ]
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on the release?",
            "en-gb": "Do you want to send the feedback on the release?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance",
            "en-gb": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance"
          }
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "en-gb": "Did you have any other feedback?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "en-gb": "Send your feedback now?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "en-gb": "Status: {send-results-status}"
          }
        }
      ]
    }
  ]
}