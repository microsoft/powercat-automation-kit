          "type": "text",
          "name": "register-name",
          "title": {
            "default": "Your name to register with",
            "en-gb": "Your name to register with"
          },
          "isRequired": true,
          "visibleIf": "{auto-register} = true"
        },
        {
          "type": "text",
          "inputMask": "email",
          "name": "register-email",
          "title": {
            "default": "Your email address to register with",
            "en-gb": "Your email address to register with"
          },
          "visibleIf": "{auto-register} = true",
          "isRequired": true,
          "validators": [
            {
              "type": "email"
            }
          ]
        },
        {
          "type": "boolean",
          "name": "send-results",
          "title": {
            "default": "Do you want to send the results of the your feedback so that the Core Automation Kit team can tailor the office hours based on your responses",
            "en-gb": "Do you want to send the results of the your feedback so that the Core Automation Kit team can tailor the office hours based on your responses"
          },
          "label": {
            "default": "Send results?",
            "en-gb": "Send results?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = false",
          "html": {
            "default": "We hope these questions will help you determine an idea of topics or questions if you attend",
            "en-gb": "We hope these questions will help you determine an idea of topics or questions if you attend"
          }
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improve the overview.",
            "en-gb": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improve the overview."
          }
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "en-gb": "Send your feedback now?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "en-gb": "Status: {send-results-status}"
          }
        }
