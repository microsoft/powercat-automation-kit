{
  "completedHtml": {
    "default": "Thank you for sending feedback",
    "it": "Grazie per aver inviato feedback"
  },
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Contribution-Feedback"
    }
  ],
  "pages": [
    {
      "elements": [
        {
          "type": "boolean",
          "name": "content-help",
          "label": {
            "default": "Did this overview help?",
            "it": "Questa panoramica ha aiutato?"
          },
          "isRequired": false
        },
        {
          "type": "checkbox",
          "name": "most-useful",
          "title": {
            "default": "What topics where most useful for you?",
            "it": "Quali argomenti ti sono stati piÃ¹ utili?"
          },
          "isRequired": true,
          "hasOther": true,
          "colCount": 1,
          "choices": [
            {
              "value": "Not sure",
              "text": {
                "default": null,
                "it": null
              }
            },
            {
              "value": "Link to public feedback channels on GitHub",
              "text": {
                "default": null,
                "it": null
              }
            },
            {
              "value": "Ability to comment publicly on issues or new features",
              "text": {
                "default": null,
                "it": null
              }
            },
            {
              "value": "Knowledge of how can contribute the Automation Kit",
              "text": {
                "default": null,
                "it": null
              }
            }
          ]
        },
        {
          "name": "most-useful-topics",
          "type": "ranking",
          "title": {
            "default": "Please rank the topics of interest to you (long tap on selection with a touch screen)",
            "it": "Si prega di classificare gli argomenti di interesse per voi (toccare a lungo la selezione con un touch screen)"
          },
          "visibleIf": "{most-useful.length} > 1",
          "choicesFromQuestion": "most-useful",
          "choicesFromQuestionMode": "selected",
          "isRequired": true
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Any other feedback?",
            "it": "Altri commenti?"
          }
        },
        {
          "type": "boolean",
          "name": "send-results",
          "title": {
            "default": "Do you want to send the results of the your feedback so that the Core Automation Kit team can tailor our feedback process?",
            "it": "Vuoi inviare i risultati del tuo feedback in modo che il team Core Automation Kit possa personalizzare il nostro processo di feedback?"
          },
          "label": {
            "default": "Send results?",
            "it": "Inviare risultati?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improve the contribution feedback.",
            "it": "Non vediamo l'ora di ricevere il tuo feedback. Come team principale di Automation Kit utilizziamo il feedback per migliorare il feedback sui contributi."
          }
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "it": "Invia il tuo feedback ora?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "it": "Stato: {send-results-status}"
          }
        }
      ]
    }
  ]
}