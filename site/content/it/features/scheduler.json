{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-AK4PP-Scheduler"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "features",
          "title": {
            "default": "Which of the following is most useful for your related to Scheduler functionality?",
            "it": "Quale delle seguenti opzioni è più utile per la funzionalità relativa all'Utilità di pianificazione?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "The ability to view schedules by day",
              "text": {
                "default": "The ability to view schedules by day",
                "it": "La possibilità di visualizzare le pianificazioni per giorno"
              }
            },
            {
              "value": "The ability to view schedules by week",
              "text": {
                "default": "The ability to view schedules by week",
                "it": "La possibilità di visualizzare gli orari per settimana"
              }
            },
            {
              "value": "The ability to view schedules by month",
              "text": {
                "default": "The ability to view schedules by month",
                "it": "La possibilità di visualizzare le pianificazioni per mese"
              }
            },
            {
              "value": "The ability to run a flow",
              "text": {
                "default": "The ability to run a flow",
                "it": "La capacità di eseguire un flusso"
              }
            },
            {
              "value": "See the results of runs",
              "text": {
                "default": "See the results of runs",
                "it": "Visualizzare i risultati delle corse"
              }
            }
          ]
        },
        {
          "type": "checkbox",
          "name": "new-features",
          "title": {
            "default": "What new features would you like added to the Scheduler functionality?",
            "it": "Quali nuove funzionalità si desidera aggiungere alla funzionalità dell'utilità di pianificazione?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "The ability to filter by status (Success, Fail, Scheduled)",
              "text": {
                "default": "The ability to filter by status (Success, Fail, Scheduled)",
                "it": "Possibilità di filtrare in base allo stato (Operazione riuscita, Non riuscita, Pianificata)"
              }
            },
            {
              "value": "The ability to filter by machine / machine group",
              "text": {
                "default": "The ability to filter by machine / machine group",
                "it": "La possibilità di filtrare per macchina / gruppo di macchine"
              }
            },
            {
              "value": "Define alerts for failed runs",
              "text": {
                "default": "Define alerts for failed runs",
                "it": "Definire gli avvisi per le esecuzioni non riuscite"
              }
            },
            {
              "value": "Restart / Stop flow execution",
              "text": {
                "default": "Restart / Stop flow execution",
                "it": "Riavvia / Interrompi l'esecuzione del flusso"
              }
            },
            {
              "value": "Define dependencies between flow runs",
              "text": {
                "default": "Define dependencies between flow runs",
                "it": "Definire le dipendenze tra le esecuzioni di flusso"
              }
            },
            {
              "value": "See the results of runs",
              "text": {
                "default": "See the results of runs",
                "it": "Visualizzare i risultati delle corse"
              }
            }
          ]
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on Scheduler?",
            "it": "Vuoi inviare il feedback su Scheduler?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our guidance and roadmap",
            "it": "Non vediamo l'ora di ricevere il tuo feedback. Come team principale di Automation Kit, utilizziamo il feedback per migliorare la nostra guida e la nostra tabella di marcia"
          }
        },
        {
          "type": "text",
          "name": "optional-name",
          "title": {
            "default": "You name (optional)",
            "it": "Il tuo nome (facoltativo)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "text",
          "name": "optional-name",
          "title": {
            "default": "You name (optional)",
            "it": "Il tuo nome (facoltativo)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "text",
          "name": "optional-organization",
          "title": {
            "default": "You organization (optional)",
            "it": "La tua organizzazione (opzionale)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "dropdown",
          "name": "optional-role",
          "title": {
            "default": "Role (optional)",
            "it": "Ruolo (facoltativo)"
          },
          "choices": [
            {
              "value": "COE Administrator",
              "text": {
                "default": "COE Administrator",
                "it": "Amministratore del COE"
              }
            },
            {
              "value": "Automation Engineer",
              "text": {
                "default": "Automation Engineer",
                "it": "Ingegnere dell'automazione"
              }
            },
            {
              "value": "Business User",
              "text": {
                "default": "Business User",
                "it": "Utente aziendale"
              }
            },
            {
              "value": "Other",
              "text": {
                "default": "Other",
                "it": "Altro"
              }
            }
          ]
        },
        {
          "type": "text",
          "name": "optional-role-other",
          "title": {
            "default": "You role",
            "it": "Il tuo ruolo"
          },
          "visibleIf": "{optional-role} = 'Other'"
        },
        {
          "type": "text",
          "name": "optional-contact",
          "title": {
            "default": "You contact details (optional)",
            "it": "I tuoi dati di contatto (facoltativo)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "it": "Hai avuto altri feedback?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "it": "Invia il tuo feedback ora?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "it": "Stato: "
          }
        }
      ]
    }
  ]
}