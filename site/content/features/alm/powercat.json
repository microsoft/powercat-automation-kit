{
    "triggers": [
        {
            "type": "setvalue",
            "expression": "{send-results} = true",
            "setToName": "code",
            "setValue": "Feedback-AK4PP-ALM-PowerCAT"
        }
    ],
    "pages": [
        {
            "name": "welcome",
            "elements": [
                {
                    "type": "checkbox",
                    "name": "roles",
                    "title": "Which of was most useful for related to Power CAT ALM usage?",
                    "isRequired": true,
                    "colCount": 1,
                    "hasOther": true,
                    "choices": [
                        "Understanding how Power CAT releases low code releases",
                        "What the ALM Roadmap is for the Automation Kit",
                        "How we add ALM specific tasks to our Power Automate Desktop process",
                        "How we apply unit testing",
                        "How we apply integration / system testing",
                        "How this relates to in-product ALM roadmap"
                    ]
                },
                {
                    "type": "boolean",
                    "name": "send-results",
                    "label": "Do you want to send the feedback on PowerCAT ALM usage?",
                    "isRequired": true
                },
                {
                    "type": "html",
                    "visibleIf": "{send-results} = true",
                    "html": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our guidance and roadmap"
                },
                {
                    "type": "comment",
                    "name": "other-feedback",
                    "title": "Did you have any other feedback?",
                    "visibleIf": "{send-results} = true"
                },
                {
                    "type": "feedback-task",
                    "name": "send-results",
                    "title": "Send your feedback now?",
                    "destination": "https://aka.ms/ak4pp-feedback2",
                    "visibleIf": "{send-results} = true"
                },
                {
                    "type": "html",
                    "visibleIf": "{send-results-status.length} > 0",
                    "html": "Status: {send-results-status}"
                }
            ]
        }
    ]
}