{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-AK4PP-Scheduler"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "features",
          "title": {
            "default": "Which of the following is most useful for your related to Scheduler functionality?",
            "fr": "Lequel des éléments suivants est le plus utile pour votre fonctionnalité liée au planificateur ?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "The ability to view schedules by day",
              "text": {
                "default": "The ability to view schedules by day",
                "fr": "La possibilité de visualiser les horaires par jour"
              }
            },
            {
              "value": "The ability to view schedules by week",
              "text": {
                "default": "The ability to view schedules by week",
                "fr": "La possibilité de consulter les horaires par semaine"
              }
            },
            {
              "value": "The ability to view schedules by month",
              "text": {
                "default": "The ability to view schedules by month",
                "fr": "La possibilité d’afficher les plannings par mois"
              }
            },
            {
              "value": "The ability to run a flow",
              "text": {
                "default": "The ability to run a flow",
                "fr": "La possibilité d’exécuter un flux"
              }
            },
            {
              "value": "See the results of runs",
              "text": {
                "default": "See the results of runs",
                "fr": "Voir les résultats des courses"
              }
            }
          ]
        },
        {
          "type": "checkbox",
          "name": "new-features",
          "title": {
            "default": "What new features would you like added to the Scheduler functionality?",
            "fr": "Quelles nouvelles fonctionnalités souhaitez-vous ajouter à la fonctionnalité Planificateur ?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "The ability to filter by status (Success, Fail, Scheduled)",
              "text": {
                "default": "The ability to filter by status (Success, Fail, Scheduled)",
                "fr": "La possibilité de filtrer par statut (Succès, Échec, Planifié)"
              }
            },
            {
              "value": "The ability to filter by machine / machine group",
              "text": {
                "default": "The ability to filter by machine / machine group",
                "fr": "La possibilité de filtrer par machine / groupe de machines"
              }
            },
            {
              "value": "Define alerts for failed runs",
              "text": {
                "default": "Define alerts for failed runs",
                "fr": "Définir des alertes pour les exécutions ayant échoué"
              }
            },
            {
              "value": "Restart / Stop flow execution",
              "text": {
                "default": "Restart / Stop flow execution",
                "fr": "Redémarrer / Arrêter l’exécution du flux"
              }
            },
            {
              "value": "Define dependencies between flow runs",
              "text": {
                "default": "Define dependencies between flow runs",
                "fr": "Définir les dépendances entre les exécutions de flux"
              }
            },
            {
              "value": "See the results of runs",
              "text": {
                "default": "See the results of runs",
                "fr": "Voir les résultats des courses"
              }
            }
          ]
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on Scheduler?",
            "fr": "Voulez-vous envoyer vos commentaires sur Planificateur ?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our guidance and roadmap",
            "fr": "Nous sommes impatients de recevoir vos commentaires. En tant qu’équipe de base du kit d’automatisation, nous utilisons les commentaires pour améliorer nos conseils et notre feuille de route"
          }
        },
        {
          "type": "text",
          "name": "optional-name",
          "title": {
            "default": "You name (optional)",
            "fr": "Votre nom (facultatif)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "text",
          "name": "optional-name",
          "title": {
            "default": "You name (optional)",
            "fr": "Votre nom (facultatif)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "text",
          "name": "optional-organization",
          "title": {
            "default": "You organization (optional)",
            "fr": "Votre organisation (facultatif)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "dropdown",
          "name": "optional-role",
          "title": {
            "default": "Role (optional)",
            "fr": "Rôle (facultatif)"
          },
          "choices": [
            {
              "value": "COE Administrator",
              "text": {
                "default": "COE Administrator",
                "fr": "Administrateur du CE"
              }
            },
            {
              "value": "Automation Engineer",
              "text": {
                "default": "Automation Engineer",
                "fr": "Ingénieur en automatisation"
              }
            },
            {
              "value": "Business User",
              "text": {
                "default": "Business User",
                "fr": "Utilisateur professionnel"
              }
            },
            {
              "value": "Other",
              "text": {
                "default": "Other",
                "fr": "Autre"
              }
            }
          ]
        },
        {
          "type": "text",
          "name": "optional-role-other",
          "title": {
            "default": "You role",
            "fr": "Votre rôle"
          },
          "visibleIf": "{optional-role} = 'Other'"
        },
        {
          "type": "text",
          "name": "optional-contact",
          "title": {
            "default": "You contact details (optional)",
            "fr": "Vos coordonnées (facultatif)"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "fr": "Avez-vous eu d’autres retours ?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "fr": "Envoyer vos commentaires maintenant?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "fr": "Statut: "
          }
        }
      ]
    }
  ]
}