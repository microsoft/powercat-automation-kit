{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-December-2022-Release"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "roles",
          "title": {
            "default": "Which of the following will be most useful for you in this release?",
            "ja": "このリリースで最も役立つのは次のうちどれですか?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "Getting hands on with the Automation Kit",
              "text": {
                "default": null,
                "ja": null
              }
            },
            {
              "value": "Setup automation so I quickly install the Automation Kit",
              "text": {
                "default": null,
                "ja": null
              }
            },
            {
              "value": "ALM Accelerator integration",
              "text": {
                "default": null,
                "ja": null
              }
            },
            {
              "value": "Roadmap of whats next",
              "text": {
                "default": null,
                "ja": null
              }
            }
          ]
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on the release?",
            "ja": "リリースに関するフィードバックを送信しますか?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance",
            "ja": "皆様からのフィードバックをお待ちしております。オートメーションキットのコアチームとして、フィードバックを使用してマイルストーンとガイダンスを改善します"
          }
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "ja": "他にフィードバックはありましたか?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "ja": "今すぐフィードバックを送信しますか?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "ja": "状態: {送信結果の状態}"
          }
        }
      ]
    }
  ]
}