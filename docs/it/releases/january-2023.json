{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-January-2022-Release"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "roles",
          "title": {
            "default": "Which of the following will be most useful for you in this release?",
            "it": "Quale delle seguenti affermazioni sarÃ  piÃ¹ utile per te in questa versione?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "Setup automation so I quickly install the Automation Kit",
              "text": {
                "default": "Setup automation so I quickly install the Automation Kit",
                "it": "Configurazione dell'automazione in modo da installare rapidamente il kit di automazione"
              }
            },
            {
              "value": "ALM Accelerator integration",
              "text": {
                "default": "ALM Accelerator integration",
                "it": "Integrazione di ALM Accelerator"
              }
            },
            {
              "value": "Roadmap of whats next",
              "text": {
                "default": "Roadmap of whats next",
                "it": "Tabella di marcia del futuro"
              }
            }
          ]
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on the release?",
            "it": "Vuoi inviare il feedback sul rilascio?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance",
            "it": "Non vediamo l'ora di ricevere il tuo feedback. Come team principale di Automation Kit utilizziamo il feedback per migliorare le nostre pietre miliari e la nostra guida"
          }
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "it": "Hai avuto altri feedback?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "it": "Invia il tuo feedback ora?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "it": "Stato: {send-results-status}"
          }
        }
      ]
    }
  ]
}