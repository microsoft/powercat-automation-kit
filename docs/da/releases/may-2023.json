{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-May-2023-Release"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "roles",
          "title": {
            "default": "Which of the following will be of most useful for you in this release?",
            "da": "Hvilket af følgende vil være mest nyttigt for dig i denne udgivelse?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "Automation CoE Main - Project Information",
              "text": {
                "default": "Automation CoE Main - Project Information",
                "da": "Automation CoE Main - Projektoplysninger"
              }
            },
            {
              "value": "Power BI Filters",
              "text": {
                "default": "Power BI Filters",
                "da": "Power BI-filtre"
              }
            },
            {
              "value": "Bring Your Own Data Lake (BYODL)",
              "text": {
                "default": "Bring Your Own Data Lake (BYODL)",
                "da": "Medbring din egen datasø (BYODL)"
              }
            },
            {
              "value": "Bring Your Own Data Lake (BYODL) - Restricted Network",
              "text": {
                "default": "Bring Your Own Data Lake (BYODL) - Restricted Network",
                "da": "Bring Your Own Data Lake (BYODL) – begrænset netværk"
              }
            }
          ]
        },
        {
          "type": "comment",
          "name": "anything-else",
          "title": {
            "default": "Any other key features you think should be added?",
            "da": "Er der andre nøglefunktioner, du synes skal tilføjes?"
          }
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on the release?",
            "da": "Vil du sende feedback på udgivelsen?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance",
            "da": "Vi ser frem til at få din feedback. Som et centralt Automation Kit-team bruger vi feedbacken til at forbedre vores milepæle og vejledning"
          }
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "da": "Har du andre tilbagemeldinger?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "da": "Send din feedback nu?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "da": "Status: "
          }
        }
      ]
    }
  ]
}