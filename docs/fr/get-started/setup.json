{
  "checkErrorsMode": "onValueChanging",
  "pages": [
    {
      "name": "welcome",
      "title": {
        "default": "Welcome",
        "fr": "Bienvenue"
      },
      "elements": [
        {
          "type": "checkbox",
          "name": "installType",
          "title": {
            "default": "What component(s) are you looking to setup?",
            "fr": "Quel(s) composant(s) cherchez-vous à configurer ?"
          },
          "isRequired": true,
          "colCount": 1,
          "choices": [
            {
              "value": "Main solution",
              "text": {
                "default": "Main solution",
                "fr": "Solution principale"
              }
            },
            {
              "value": "Satellite solution",
              "text": {
                "default": "Satellite solution",
                "fr": "Solution satellite"
              }
            },
            {
              "value": "Data Import",
              "text": {
                "default": "Data Import",
                "fr": "Importation de données"
              }
            },
            {
              "value": "Security Group Setup",
              "text": {
                "default": "Security Group Setup",
                "fr": "Configuration du groupe de sécurité"
              }
            }
          ]
        }
      ]
    },
    {
      "title": {
        "default": "Main Solution - Connections",
        "fr": "Solution principale - Connexions"
      },
      "visibleIf": "contains({installType}, 'Main solution')",
      "elements": [
        {
          "type": "paneldynamic",
          "name": "main-connections",
          "title": {
            "default": "Please provide one of each of the following the connections",
            "fr": "Veuillez fournir l’une des connexions suivantes"
          },
          "minPanelCount": 5,
          "maxPanelCount": 5,
          "templateElements": [
            {
              "name": "connectionType",
              "type": "dropdown",
              "title": {
                "default": "Connection",
                "fr": "Connexion"
              },
              "choices": [
                {
                  "value": "Approvals",
                  "text": {
                    "default": "Approvals",
                    "fr": "Approbations"
                  }
                },
                {
                  "value": "Microsoft Dataverse",
                  "text": {
                    "default": "Microsoft Dataverse",
                    "fr": "Microsoft Dataverse"
                  }
                },
                {
                  "value": "Office 365 Users",
                  "text": {
                    "default": "Office 365 Users",
                    "fr": "Utilisateurs d’Office 365"
                  }
                },
                {
                  "value": "Office 365 Outlook",
                  "text": {
                    "default": "Office 365 Outlook",
                    "fr": "Office 365 Outlook"
                  }
                },
                {
                  "value": "Power Platform for Admins Automation",
                  "text": {
                    "default": "Power Platform for Admins Automation",
                    "fr": "Automatisation de Power Platform for Admins"
                  }
                }
              ],
              "isRequired": true
            },
            {
              "name": "url",
              "type": "text",
              "title": {
                "default": "Connection Link",
                "fr": "Lien de connexion"
              },
              "isRequired": true,
              "startWithNewLine": false,
              "validators": [
                {
                  "type": "regex",
                  "text": "Must be a valid Power Platform connection link starting with https://make.powerapps.com",
                  "regex": "^(https://make.powerapps.com/environments/)[-a-zA-Z0-9]{36,36}(/connections/shared_[a-z].*/)[a-zA-Z0-9]{32,32}(/details)"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}