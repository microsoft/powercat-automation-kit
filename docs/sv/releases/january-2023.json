{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-January-2022-Release"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "roles",
          "title": {
            "default": "Which of the following will be most useful for you in this release?",
            "sv": "Vilket av följande kommer att vara mest användbart för dig i den här versionen?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "Setup automation so I quickly install the Automation Kit",
              "text": {
                "default": "Setup automation so I quickly install the Automation Kit",
                "sv": "Ställ in automatisering så att jag snabbt installerar Automation Kit"
              }
            },
            {
              "value": "ALM Accelerator integration",
              "text": {
                "default": "ALM Accelerator integration",
                "sv": "Integrering med ALM Accelerator"
              }
            },
            {
              "value": "Roadmap of whats next",
              "text": {
                "default": "Roadmap of whats next",
                "sv": "Färdplan för vad som händer härnäst"
              }
            }
          ]
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on the release?",
            "sv": "Vill du skicka feedback på releasen?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance",
            "sv": "Vi ser fram emot att få din feedback. Som ett kärnteam för Automation Kit använder vi feedbacken för att förbättra våra milstolpar och vägledning"
          }
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "sv": "Fick du någon annan feedback?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "sv": "Skicka din feedback nu?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "sv": "Status: "
          }
        }
      ]
    }
  ]
}