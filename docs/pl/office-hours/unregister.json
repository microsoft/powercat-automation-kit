{
  "checkErrorsMode": "onValueChanging",
  "completedHtml": {
    "default": "Thank you for completing unregistration",
    "pl": "Dziękujemy za wyrejestrowanie"
  },
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{register-email.length} > 0",
      "setToName": "code",
      "setValue": "Office-Hours-Unregister"
    }
  ],
  "pages": [
    {
      "elements": [
        {
          "type": "checkbox",
          "name": "reason",
          "title": {
            "default": "(Optional) Your feedback helps us improve. Which of the following are reason(s) that you are unregistering?",
            "pl": "(Opcjonalnie) Twoja opinia pomoże nam się poprawić. Które z poniższych powodów są wyrejestrowywane?"
          },
          "isRequired": false,
          "hasOther": true,
          "colCount": 1,
          "choices": [
            {
              "value": "The time does not work",
              "text": {
                "default": "The time does not work",
                "pl": "Czas nie działa"
              }
            },
            {
              "value": "No longer relevant",
              "text": {
                "default": "No longer relevant",
                "pl": "Nie ma już znaczenia"
              }
            },
            {
              "value": "Too technical",
              "text": {
                "default": "Too technical",
                "pl": "Zbyt techniczny"
              }
            },
            {
              "value": "Not enough business focus",
              "text": {
                "default": "Not enough business focus",
                "pl": "Niewystarczająca koncentracja na biznesie"
              }
            }
          ]
        },
        {
          "type": "text",
          "name": "register-name",
          "title": {
            "default": "The name that you registered with",
            "pl": "Nazwa, pod którą się zarejestrowałeś"
          }
        },
        {
          "type": "text",
          "inputMask": "email",
          "name": "register-email",
          "title": {
            "default": "The email address your registered with",
            "pl": "Adres e-mail, na który się zarejestrowałeś"
          },
          "isRequired": true,
          "validators": [
            {
              "type": "email"
            }
          ]
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your unregistration now?",
            "pl": "Wysłać teraz wyrejestrowanie?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "pl": "Status: {send-results-status}"
          }
        }
      ]
    }
  ]
}