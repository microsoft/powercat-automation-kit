{
  "checkErrorsMode": "onValueChanging",
  "pages": [
    {
      "name": "welcome",
      "title": {
        "default": "Welcome",
        "en-gb": "Welcome"
      },
      "elements": [
        {
          "type": "checkbox",
          "name": "installType",
          "title": {
            "default": "What component(s) are you looking to setup?",
            "en-gb": "What component(s) are you looking to setup?"
          },
          "isRequired": true,
          "colCount": 1,
          "choices": [
            {
              "value": "Main solution",
              "text": {
                "default": "Main solution",
                "en-gb": "Main solution"
              }
            },
            {
              "value": "Satellite solution",
              "text": {
                "default": "Satellite solution",
                "en-gb": "Satellite solution"
              }
            },
            {
              "value": "Data Import",
              "text": {
                "default": "Data Import",
                "en-gb": "Data Import"
              }
            },
            {
              "value": "Security Group Setup",
              "text": {
                "default": "Security Group Setup",
                "en-gb": "Security Group Setup"
              }
            }
          ]
        }
      ]
    },
    {
      "title": {
        "default": "Main Solution - Connections",
        "en-gb": "Main Solution - Connections"
      },
      "visibleIf": "contains({installType}, 'Main solution')",
      "elements": [
        {
          "type": "paneldynamic",
          "name": "main-connections",
          "title": {
            "default": "Please provide one of each of the following the connections",
            "en-gb": "Please provide one of each of the following the connections"
          },
          "minPanelCount": 5,
          "maxPanelCount": 5,
          "templateElements": [
            {
              "name": "connectionType",
              "type": "dropdown",
              "title": {
                "default": "Connection",
                "en-gb": "Connection"
              },
              "choices": [
                {
                  "value": "Approvals",
                  "text": {
                    "default": "Approvals",
                    "en-gb": "Approvals"
                  }
                },
                {
                  "value": "Microsoft Dataverse",
                  "text": {
                    "default": "Microsoft Dataverse",
                    "en-gb": "Microsoft Dataverse"
                  }
                },
                {
                  "value": "Office 365 Users",
                  "text": {
                    "default": "Office 365 Users",
                    "en-gb": "Office 365 Users"
                  }
                },
                {
                  "value": "Office 365 Outlook",
                  "text": {
                    "default": "Office 365 Outlook",
                    "en-gb": "Office 365 Outlook"
                  }
                },
                {
                  "value": "Power Platform for Admins Automation",
                  "text": {
                    "default": "Power Platform for Admins Automation",
                    "en-gb": "Power Platform for Admins Automation"
                  }
                }
              ],
              "isRequired": true
            },
            {
              "name": "url",
              "type": "text",
              "title": {
                "default": "Connection Link",
                "en-gb": "Connection Link"
              },
              "isRequired": true,
              "startWithNewLine": false,
              "validators": [
                {
                  "type": "regex",
                  "text": "Must be a valid Power Platform connection link starting with https://make.powerapps.com",
                  "regex": "^(https://make.powerapps.com/environments/)[-a-zA-Z0-9]{36,36}(/connections/shared_[a-z].*/)[a-zA-Z0-9]{32,32}(/details)"
                }
              ]
            }
          ]
        },
        {
          "type": "download-task",
          "title": {
            "default": "Download results",
            "en-gb": "Download results"
          },
          "name": "downloadResults",
          "filter": "main"
        }
      ]
    }
  ]
}