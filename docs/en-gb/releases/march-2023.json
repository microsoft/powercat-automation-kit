{
  "triggers": [
    {
      "type": "setvalue",
      "expression": "{send-results} = true",
      "setToName": "code",
      "setValue": "Feedback-March-2023-Release"
    }
  ],
  "pages": [
    {
      "name": "welcome",
      "elements": [
        {
          "type": "checkbox",
          "name": "roles",
          "title": {
            "default": "Which of the following will be of most useful for you in this release?",
            "en-gb": "Which of the following will be of most useful for you in this release?"
          },
          "isRequired": true,
          "colCount": 1,
          "hasOther": true,
          "choices": [
            {
              "value": "New Scheduler features",
              "text": {
                "default": "New Scheduler features",
                "en-gb": "New Scheduler features"
              }
            },
            {
              "value": "v2 schema support",
              "text": {
                "default": "v2 schema support",
                "en-gb": "v2 schema support"
              }
            },
            {
              "value": "Resolution of bugs and questions",
              "text": {
                "default": "Resolution of bugs and questions",
                "en-gb": "Resolution of bugs and questions"
              }
            },
            {
              "value": "Roadmap of whats next",
              "text": {
                "default": "Roadmap of whats next",
                "en-gb": "Roadmap of whats next"
              }
            }
          ]
        },
        {
          "type": "comment",
          "name": "anything-else",
          "title": {
            "default": "Any other key features you think should be added?",
            "en-gb": "Any other key features you think should be added?"
          }
        },
        {
          "type": "boolean",
          "name": "send-results",
          "label": {
            "default": "Do you want to send the feedback on the release?",
            "en-gb": "Do you want to send the feedback on the release?"
          },
          "isRequired": true
        },
        {
          "type": "html",
          "visibleIf": "{send-results} = true",
          "html": {
            "default": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance",
            "en-gb": "We look forward to getting your feedback. As a core Automation Kit team we use the feedback to improving our milestones and guidance"
          }
        },
        {
          "type": "comment",
          "name": "other-feedback",
          "title": {
            "default": "Did you have any other feedback?",
            "en-gb": "Did you have any other feedback?"
          },
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "feedback-task",
          "name": "send-results",
          "title": {
            "default": "Send your feedback now?",
            "en-gb": "Send your feedback now?"
          },
          "destination": "https://aka.ms/ak4pp-feedback2",
          "visibleIf": "{send-results} = true"
        },
        {
          "type": "html",
          "visibleIf": "{send-results-status.length} > 0",
          "html": {
            "default": "Status: {send-results-status}",
            "en-gb": "Status: "
          }
        }
      ]
    }
  ]
}